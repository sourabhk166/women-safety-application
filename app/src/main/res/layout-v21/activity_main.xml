<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="155dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_margin="10dp"
                android:textSize="30dp"
                android:text="Always with You" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/callBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/call_icon"
                android:scaleType="fitCenter"
                android:layout_margin="20dp"
                android:background="@drawable/icon_radius"
                app:srcCompat="@drawable/ic_call" />

            <ImageButton
                android:id="@+id/locationBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/location_icon"
                android:scaleType="fitCenter"
                android:layout_margin="20dp"
                android:background="@drawable/icon_radius"
                app:srcCompat="@drawable/ic_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/videoBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/video_icon"
                android:scaleType="fitCenter"
                android:layout_margin="20dp"
                android:background="@drawable/icon_radius"
                app:srcCompat="@drawable/ic_video" />

            <ImageButton
                android:id="@+id/contactBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/contact_icon"
                android:scaleType="fitCenter"
                android:layout_margin="20dp"
                android:background="@drawable/icon_radius"
                app:srcCompat="@drawable/ic_contacts"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/reportBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/report_icon"
                android:scaleType="fitCenter"
                android:layout_margin="20dp"
                android:background="@drawable/icon_radius"
                app:srcCompat="@drawable/ic_report" />

            <ImageButton
                android:id="@+id/feedbackBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/feedback_icon"
                android:scaleType="fitCenter"
                android:layout_margin="20dp"
                android:background="@drawable/icon_radius"
                app:srcCompat="@drawable/ic_feedback" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>